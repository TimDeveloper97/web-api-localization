    <EmbeddedResource Update="Resources\controllers\AppResource.resx">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Update="Resources\controllers\AppResource.vi.resx">
